package net.glassesfactory.utils
{
	import flash.display.BitmapData;
	import flash.display.DisplayObject;
	
	public class BitmapDataConverter
	{
		/*/////////////////////////////////////////
		* public consts
		/*/////////////////////////////////////////
		
		
		/*/////////////////////////////////////////
		* public vars
		/*/////////////////////////////////////////
		
		
		/*/////////////////////////////////////////
		* getter
		/*/////////////////////////////////////////
		
		
		/*/////////////////////////////////////////
		* setter
		/*/////////////////////////////////////////
		
		
		/*/////////////////////////////////////////
		* public methods
		/*/////////////////////////////////////////
		
		//Constractor
		public function BitmapDataConverter(){}
		
		public static function convert( target:DisplayObject ):BitmapData
		{
			var bmd:BitmapData = new BitmapData( target.width, target.height, true, 0 );
			bmd.draw( target );
			return bmd;
		}
		
		
		/*/////////////////////////////////////////
		* private methods
		/*/////////////////////////////////////////
		
		
		/*/////////////////////////////////////////
		* private vars
		/*/////////////////////////////////////////
	}
}