package net.glassesfactory.display
{
	
	public class RGB
	{
		/*/////////////////////////////////////////
		* public consts
		/*/////////////////////////////////////////
		
		
		/*/////////////////////////////////////////
		* public vars
		/*/////////////////////////////////////////
		
		public var r:int = 0, g:int = 0, b:int = 0;
		
		/*/////////////////////////////////////////
		* getter
		/*/////////////////////////////////////////
		
		
		/*/////////////////////////////////////////
		* setter
		/*/////////////////////////////////////////
		
		
		/*/////////////////////////////////////////
		* public methods
		/*/////////////////////////////////////////
		
		//Constractor
		public function RGB( color:uint )
		{
			setRGB( color );
		}
		
		public function setRGB( color:uint ):void
		{
			r = color >> 16 & 0xFF;
			g = color >> 8 & 0xFF;
			b = color & 0xFF;
		}
		
		public function getRGB():uint
		{
			var col:uint = 0;
			col += r << 16;
			col += g << 8;
			col += b;
			
			return col;
		}
		
		/*/////////////////////////////////////////
		* private methods
		/*/////////////////////////////////////////
		
		
		/*/////////////////////////////////////////
		* private vars
		/*/////////////////////////////////////////
		
	}
}